@model wdws.Models.Recenzija

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recenzija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="reviewID" />
            <div class="form-group">
                <label asp-for="tekstRecenzije" class="control-label">Tekst recenzije: </label>
                <input asp-for="tekstRecenzije" class="form-control" />
                <span asp-validation-for="tekstRecenzije" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="putID" class="control-label">Putovanje </label>
                <select asp-for="putID" class ="form-control" asp-items="ViewBag.Putovanja"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="clientID" class="control-label">ID Klijenta </label>
                <input asp-for="clientID" class="form-control" />
                <span asp-validation-for="clientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
