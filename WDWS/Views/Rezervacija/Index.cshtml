@model IEnumerable<wdws.Models.Rezervacija>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.put)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojPutnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ukupnaCijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MilesBodovi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.smjestaj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.put.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojPutnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ukupnaCijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MilesBodovi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.smjestaj.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.rezervacijaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.rezervacijaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.rezervacijaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
