    }

    .form-section {
        width: 70%;
        margin-right: 5%;
    }

    .summary-section {
        width: 25%;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

