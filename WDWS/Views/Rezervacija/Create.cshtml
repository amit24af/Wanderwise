@model wdws.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="form-section">
        <h1>Booking</h1>
        <h2>Kreirajte svoje putovanje</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group">
                <label asp-for="putovanjeID" class="control-label"></label>
                <select asp-for="putovanjeID" class ="form-control" asp-items="ViewBag.Putovanja"></select>
            </div>

            <div class="input-group">
                <label asp-for="brojPutnika" class="control-label"></label>
                <input asp-for="brojPutnika" class="form-control" />
                <span asp-validation-for="brojPutnika" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="ukupnaCijena" class="control-label"></label>
                <input asp-for="ukupnaCijena" class="form-control" />
                <span asp-validation-for="ukupnaCijena" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="MilesBodovi" class="control-label"></label>
                <input asp-for="MilesBodovi" class="form-control" />
                <span asp-validation-for="MilesBodovi" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="rezervisanaSobaID" class="control-label"></label>
                <input asp-for="rezervisanaSobaID" class="form-control" />
                <span asp-validation-for="rezervisanaSobaID" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control"></select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="klijentID" class="control-label"></label>
                <select asp-for="klijentID" class ="form-control" asp-items="ViewBag.klijentID"></select>
            </div>

            <div class="input-group form-check full-width">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VodicUkljucen" /> @Html.DisplayNameFor(model => model.VodicUkljucen)
                </label>
            </div>

            <button type="submit" class="submit-button">Nastavi na plaÄ‡anje</button>
        </form>
    </div>

    <div class="summary-section">
        <!-- Add summary details here if needed -->
    </div>
</div>

