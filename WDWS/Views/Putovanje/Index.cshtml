@model IEnumerable<wdws.Models.Putovanje>

@{
ViewData["Title"] = "Trips";
}


<!-- <p>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
</p> -->


<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 mb-4">
                <div class="card h-100" style="background: rgba(255, 255, 255, 0.7); cursor: pointer;" onclick="location.href='@Url.Action("Details", new { id = item.travelId })'">
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" class="card-img-top" alt="Trip Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.mjestoPolaskaID - @item.mjestoDolaskaID</h5>
                        <p class="card-text">
                            <strong>Duration:</strong> @item.duzinaPutovanja <br />
                            <strong>Departure:</strong> @item.datumPolaska.ToString("dd MMM yyyy") <br />
                            <strong>Arrival:</strong> @item.datumDolaska.ToString("dd MMM yyyy") <br />
                            <strong>Price:</strong> @item.cijenaPoOsobi <br />
                            <strong>Transport:</strong> @item.prijevoz <br />
                            <strong>Description:</strong> <span class="description">@item.OpisPutovanja</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <br/>
    <br/>
</div>

<style>
    .container {
        margin-top: 10px;
    }
    .card {
        background: rgba(255, 255, 255, 0.7);
        transition: transform 0.2s; /* Smooth transition for scaling */
    }
    .card:hover {
        transform: scale(1.07); /* Scale up slightly on hover */
    }
    .description {
        font-size: 0.9em; /* Smaller font size for description */
    }
    .card-body {
        position: relative;
    }
</style>



