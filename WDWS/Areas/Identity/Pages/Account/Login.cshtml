@page
@model LoginModel
@{
    ViewData["Title"] = "Dobro došli nazad!";
}

<div class="container-fluid d-flex flex-column min-vh-100 p-0">
    <!-- Main Content -->
    <div class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="login-container">
            <div class="login-image"></div>
            <div class="login-form p-4">
                <h2><b>Dobro došli nazad!</b></h2>
                <p style="text-align: center;">Prijavite se kako biste pristupili svom korisničkom računu.</p>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Unesite email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Unesite lozinku" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Prijavi se</button>
                    <a asp-page="./ForgotPassword" class="btn btn-link text-white">Zaboravili ste lozinku ili username?</a>
                    <div class="register-link">
                        <p>Nemate korisnički račun?</p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">Registrirajte se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


